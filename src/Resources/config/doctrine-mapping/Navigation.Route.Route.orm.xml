<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
>
    <entity name="Silverback\ApiComponentBundle\Entity\Route\Route"
    >
        <id name="route" type="string"  />
        <many-to-one field="content" target-entity="Silverback\ApiComponentBundle\Entity\Content\AbstractContent">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column on-delete="CASCADE" />
        </many-to-one>
        <many-to-one field="redirect" target-entity="Silverback\ApiComponentBundle\Entity\Route\Route">
            <join-column name="redirect" referenced-column-name="route" />
        </many-to-one>
    </entity>
</doctrine-mapping>
