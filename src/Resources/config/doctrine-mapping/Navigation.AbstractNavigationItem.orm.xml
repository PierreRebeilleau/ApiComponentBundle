<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
>
    <entity name="Silverback\ApiComponentBundle\Entity\Navigation\AbstractNavigationItem"
            table="navigation_item"
            repository-class="Silverback\ApiComponentBundle\Repository\NavigationItemRepository"
    >
        <id name="id" type="string" />
        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="nav_bar" class="Silverback\ApiComponentBundle\Entity\Layout\NavBar\NavBarItem" />
        </discriminator-map>
    </entity>
</doctrine-mapping>
