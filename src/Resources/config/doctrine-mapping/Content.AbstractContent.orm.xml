<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
>
    <entity name="Silverback\ApiComponentBundle\Entity\Content\AbstractContent"
            table="content"
            repository-class="Silverback\ApiComponentBundle\Repository\ContentRepository"
    >
        <id name="id" type="string" />
        <discriminator-column name="discr" type="string" />
        <discriminator-map>
            <discriminator-mapping value="page" class="Silverback\ApiComponentBundle\Entity\Content\Page" />
            <discriminator-mapping value="component_group" class="Silverback\ApiComponentBundle\Entity\Content\ComponentGroup" />
        </discriminator-map>
    </entity>
</doctrine-mapping>
